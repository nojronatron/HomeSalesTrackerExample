<Window x:Class="HomeSalesTrackerApp.CrudWindows.UpdaterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeSalesTrackerApp.CrudWindows"
        mc:Ignorable="d"
        Title="Entry Editor" Height="800" Width="280" Closing="Window_Closing" Loaded="Window_Loaded">
    <DockPanel Background="Azure">
        <Menu DockPanel.Dock="Top" HorizontalAlignment="Stretch" BorderBrush="Black">
            <MenuItem Header="_File">
                <MenuItem Header="_Exit" Click="MenuExit_Click"/>
            </MenuItem>
        </Menu>
        <StatusBar DockPanel.Dock="Bottom" Background="Beige">
            <StatusBarItem>
                <TextBlock x:Name="statusBarText" Text="Window Loaded" TextAlignment="Center" Height="20" />
            </StatusBarItem>
        </StatusBar>

        <StackPanel>


            <DockPanel x:Name="updateHomePanel" Margin="10,10" Visibility="Collapsed" 
                   HorizontalAlignment="Stretch" MinWidth="250" >
                <Label Content="Update Existing Home" Height="27" DockPanel.Dock="Top" FontWeight="Bold"/>
                <Label Content="Home ID" Height="25" DockPanel.Dock="Top" />
                <TextBox x:Name="homeIdTextBox" Text="" Height="25" IsReadOnly="True" DockPanel.Dock="Top" />
                <Label Content="Address (Required)" Height="25" DockPanel.Dock="Top"  />
                <TextBox x:Name="homeAddressTextbox" Text="" Height="25" DockPanel.Dock="Top"  />
                <Label Content="City (Required)" Height="25" DockPanel.Dock="Top"  />
                <TextBox x:Name="homeCityTextbox" Text="" Height="25" DockPanel.Dock="Top"  />
                <Label Content="State (Required)" Height="25" DockPanel.Dock="Top"  />
                <TextBox x:Name="homeStateTextbox" Text="" Height="25" DockPanel.Dock="Top"  />
                <Label Content="Zip Code + 4 (Required)" Height="25" DockPanel.Dock="Top"  />
                <TextBox x:Name="homeZipTextbox" Text="" Height="25" DockPanel.Dock="Top"  />
                <Separator Margin="0,10" DockPanel.Dock="Top"  />
                <Button x:Name="updateChangedHomeFields" Content="Update Changes" Height="25" Margin="5,5" 
                    Click="UpdateChangedHomeFieldsButton_Click" DockPanel.Dock="Top"  />
            </DockPanel>

            <DockPanel x:Name="updateHomeSalesPanel" Margin="10,10" Visibility="Collapsed" 
                   HorizontalAlignment="Stretch" MinWidth="250" >
                <Label Content="Update Existing Home For Sale" Height="27" DockPanel.Dock="Top" FontWeight="Bold" />

                <Label Content="Sale ID" Height="25" DockPanel.Dock="Top" />
                <TextBox x:Name="hfsSaleIdTextBox" Text="(show hfsHomeID)" Height="25" IsReadOnly="True" DockPanel.Dock="Top" />

                <Label Content="Sale ID (bound)" Height="25" DockPanel.Dock="Top" />
                <TextBox x:Name="hfsSaleIdTextBoxBound" Text="{Binding TestMessage}" Height="25" IsReadOnly="True" DockPanel.Dock="Top" />
                
                <Label Content="Home For Sale" Height="25" DockPanel.Dock="Top"  />
                <TextBox x:Name="hfsHomeIdTextbox" Text="(should show home address and zip)" IsReadOnly="True" Height="25" DockPanel.Dock="Top" />
                <Separator Height="5" DockPanel.Dock="Top" Margin="0,5" />

                <Label Content="Sold Date" Height="25" DockPanel.Dock="Top" />
                <!--<TextBox x:Name="hfsSoldDateTextBox" Text="" Height="25" DockPanel.Dock="Top" />-->
                <DatePicker SelectedDate="2020-08-08" x:Name="hfsSoldDatePicker" Height="27" DockPanel.Dock="Top" Margin="0,5"></DatePicker>
                <Label Content="Sale Amount" Height="25" DockPanel.Dock="Top"  />
                <TextBox x:Name="hfsSaleAmountTextbox" Text="" Height="25" DockPanel.Dock="Top"  />
                <Label Content="Buyer" Height="25" DockPanel.Dock="Top"  />
                <TextBox x:Name="hfsBuyerIdTextbox" Text="" Height="25" DockPanel.Dock="Top"  />
                <ComboBox x:Name="hfsExistingBuyersCombobox" ItemsSource="{Binding}" DockPanel.Dock="Top" Margin="0,10,0,0" />
                <Separator Height="5" DockPanel.Dock="Top" Margin="0,5" />

                <Label Content="Market Date" Height="25" DockPanel.Dock="Top"  />
                <!--<TextBox x:Name="hfsMarketDateTextbox" Text="" Height="25" DockPanel.Dock="Top"  />-->
                <DatePicker SelectedDate="2020-08-08" x:Name="hfsMarketDatePicker" Height="27" DockPanel.Dock="Top" Margin="0,5" IsEnabled="False" ></DatePicker>
                <Separator Height="5" DockPanel.Dock="Top" Margin="0,5" />

                <Label Content="Agent" Height="27" DockPanel.Dock="Top"  />
                <TextBox x:Name="homeAgentTextbox" Text="(agent name)" Height="25" DockPanel.Dock="Top"  />
                <ComboBox x:Name="hfsExistingAgentsCombobox" ItemsSource="{Binding}" DockPanel.Dock="Top" Margin="0,10,0,0" />
                <Separator Height="5" DockPanel.Dock="Top" Margin="0,5" />

                <Label Content="Real Estate Company" Height="25" DockPanel.Dock="Top"  />
                <TextBox x:Name="hfsCompanyIdTextbox" Text="" Height="25" DockPanel.Dock="Top"  />
                <ComboBox x:Name="hfsExistingRecosCombobox" ItemsSource="{Binding}" DockPanel.Dock="Top" Margin="0,10,0,0" />

                <Separator Margin="0,10" DockPanel.Dock="Top"  />
                <Button x:Name="updateChangedHfsFields" Content="Update Changes" Height="25" Margin="5,5" 
                    Click="UpdateChangedHfsFieldsButton_Click" DockPanel.Dock="Top"  />
            </DockPanel>

            <DockPanel x:Name="updateRealEstateCoPanel" Margin="10,10" Visibility="Collapsed"
                    HorizontalAlignment="Stretch" MinWidth="250" >
                <Label Content="Update Existing Real Estate Company" Height="27" DockPanel.Dock="Top" FontWeight="Bold" />
                <Label Content="Company ID" Height="25" DockPanel.Dock="Top" />
                <TextBox x:Name="companyIdTextBox" Text="" Height="25" IsReadOnly="True"  DockPanel.Dock="Top" />
                <Label Content="Company Name (Required)" Height="25" DockPanel.Dock="Top"  />
                <TextBox x:Name="companyNameTextbox" Text="" Height="25" DockPanel.Dock="Top"  />
                <Label Content="Phone (Required)" Height="25" DockPanel.Dock="Top"  />
                <TextBox x:Name="companyPhoneTextbox" Text="" Height="25" DockPanel.Dock="Top"  />
                <Separator Margin="0,10" DockPanel.Dock="Top"  />
                <Button x:Name="updateChangedRECoFields" Content="Update Changes" Height="25" Margin="5,5" 
                    Click="UpdateChangedRecoFieldsButton_Click" MinWidth="25" DockPanel.Dock="Top"  />
        </DockPanel>

            <DockPanel x:Name="updatePersonPanel" Margin="10,10" Visibility="Collapsed" 
                    HorizontalAlignment="Stretch" MinWidth="250" >
                <Label Content="Update Existing Person" Height="27" DockPanel.Dock="Top" FontWeight="Bold" />
                <Label Content="Person ID" Height="25"  DockPanel.Dock="Top" />
                <TextBox x:Name="personIdTextbox" Text="" Height="25" IsReadOnly="True"  DockPanel.Dock="Top" />
                <Label Content="First name (Required)" Height="25" DockPanel.Dock="Top"  />
                <TextBox x:Name="personFirstNameTextbox" Text="" Height="25"  DockPanel.Dock="Top" />
                <Label Content="Last name (Required)" Height="25"  DockPanel.Dock="Top" />
                <TextBox x:Name="personPhoneTextbox" Text="" Height="25"  DockPanel.Dock="Top" />
                <Label Content="Phone Number (Required)" Height="25"  DockPanel.Dock="Top" />
                <TextBox x:Name="personLastNameTextbox" Text="" Height="25"  DockPanel.Dock="Top" />
                <Label Content="Email Address" Height="25" DockPanel.Dock="Top"  />
                <TextBox x:Name="personEmailTextbox" Text="" Height="25" DockPanel.Dock="Top"  />
                <Separator Margin="0,10"  DockPanel.Dock="Top" />
                <Button x:Name="updateChangedPersonFieldsButton" Content="Update Changes" Height="25" Margin="5,5" 
                    Click="UpdateChangedPersonFieldsButton_Click" MinWidth="25"  DockPanel.Dock="Top" />
            </DockPanel>


            <DockPanel x:Name="updateAgentPanel" Margin="10,10" Visibility="Collapsed" 
                    HorizontalAlignment="Stretch" MinWidth="250" >
                <Label Content="Update Existing Agent" Height="27" DockPanel.Dock="Top" FontWeight="Bold" />
                <Label Content="Agent ID" Height="25"  DockPanel.Dock="Top" />
                <TextBox x:Name="updateAgentAgentIdTextbox" Text="" Height="25" IsReadOnly="True"  DockPanel.Dock="Top" />
                <Label Content="Agent Name" Height="25" DockPanel.Dock="Top" />
                <TextBox x:Name="updateAgentAgentPersonNameTextbox" Text="" Height="25" IsReadOnly="True" DockPanel.Dock="Top" />
                <Label Content="Company ID" Height="25" DockPanel.Dock="Top"  />
                <TextBox x:Name="updateAgentCompanyIdTextbox" Text="" Height="25"  DockPanel.Dock="Top" />
                <Label Content="Commission (Percentage)" Height="25"  DockPanel.Dock="Top" />
                <TextBox x:Name="updateAgentCommissionTextbox" Text="" Height="25"  DockPanel.Dock="Top" />
                <Separator Margin="0,10" DockPanel.Dock="Top" />
                <Label Content="Choose Existing or Create New?" DockPanel.Dock="Top"/>
                <Label Content="Existing Agents:" Height="25" DockPanel.Dock="Top" Margin="5,5" />
                <ComboBox x:Name="listOfExistingAgentsCombobox" ItemsSource="{Binding}" Margin="5,5"  DockPanel.Dock="Top" SelectionChanged="listOfExistingAgentsCombobox_SelectionChanged" />

                <Label Content="Create a new Agent:" Height="25"  DockPanel.Dock="Top" />
                <Button x:Name="createNewAgentButton" Content="Create New Agent" Height="25" Margin="5,5"  DockPanel.Dock="Top" />

                <Separator Margin="0,10" DockPanel.Dock="Top" />
                <Button x:Name="updateChangedAgentFieldsButton" Content="Update Changes" Height="25" Margin="5,5" 
                    Click="UpdateChangedAgentFieldsButton_Click" MinWidth="25"  DockPanel.Dock="Top" />
            </DockPanel>
            
            <DockPanel MinWidth="250" Margin="10,5" Visibility="Hidden">
            <Button x:Name="closeButton" Content="Close" Height="25" Margin="5,5"
                Click="CloseButton_Click" MinWidth="25" DockPanel.Dock="Bottom" />
        </DockPanel>

        </StackPanel>
    </DockPanel>
</Window>
